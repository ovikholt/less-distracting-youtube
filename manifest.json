{
    "manifest_version": 2,
    "name":         "less-distractive-youtube",
    "description":  "",
    "version":      "1.0",
    "permissions": [
      "https://www.youtube.com/*"
    ],
    "icons": { "128": "yt2.png" },
    "homepage_url": "https://github.com/ovikholt/less-distracting-youtube",
    "background": {
      "persistent": false,
      "scripts": [ ]
    },
    "content_scripts": [ {
        "run_at": "document_end",
        "js": ["lib/youtube.js"],
        "matches": ["https://www.youtube.com/*"]
      }
    ],
}
